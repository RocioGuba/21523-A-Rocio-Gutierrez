<%-include('partials/header')  %>
<%-include('partials/navbar')  %>
  

    <div class="container mt-5 bg-success p-2 text-dark bg-opacity-25 #d63384;">
        <div class="row">
            <div class="col">
                <h3 class="text-center">Editar</h3>
                <form action="#" id="form-guardar" data-id="<%= id  %>" >
                    <div class="mb-3">
                        <input type="text" id="titulo-post" class="form-control" placeholder="Título del Post">
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-floating">
                            <textarea id="detalle-post" class="form-control" placeholder="Ingrese detalle" id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Descripción</label>
                          </div>
                    </div>

                    <div class="mb-3">
                        <input type="date" name="" id="fecha">
                    </div>

                    <div class="mb-3">
                        <input type="text" id="url-img" class="form-control" placeholder="Url imagen">
                    </div>
                    <button type="submit" id="btn-guardar" class="btn btn-outline-dark">
                        Guardar
                    </button>
                  </form>
            </div>
        </div>
    </div>


    <script src="/js/editar.js"></script>

